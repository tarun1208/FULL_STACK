    <button onclick="doc()"> Write to Document</button>
   
    <button onclick="log()">Login to console</button>
   
    <button onclick="update()">Update inner HTML</button>
    <p id="6e">before changing update text</p>
   
    <script>
        function show()
        {
            alert("hello alert");
        }
        function doc()
        {
            document.write("Program runned 100 percentage");
        }
        function log()
        {
            console.log("hello log");
        }
        function update()
        {
            document.getElementById("6e").innerHTML="hello update";
        }
    </script>
